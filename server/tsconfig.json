{
    "compilerOptions": {
        "target": "esnext", // Or a newer ECMAScript version
        "module": "commonjs",
        "outDir": "./dist", // Output directory for compiled JavaScript
        "rootDir": "./src", // Root directory for TypeScript source files
        "strict": true, // Enable strict type checking
        "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
        "forceConsistentCasingInFileNames": true // Ensures consistent casing in file names
    },
    "include": ["src/**/*.ts"], // Include all .ts files in the src directory
    "exclude": ["node_modules"] // Exclude node_modules from compilation
}
